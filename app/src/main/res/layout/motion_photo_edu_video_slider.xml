<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/motion_photo_edu_video_container_1"
                android:layout_width="364dp"
                android:layout_height="256dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="36dp">
                <com.google.android.apps.camera.ui.eduimageview.EduImageView
                    android:id="@+id/motion_photo_edu_video_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:importantForAccessibility="no"/>
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/motion_photo_edu_video_1_play_button"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/edu_animation_play_button"
                    android:contentDescription="@string/start_animation"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:layout_gravity="center_horizontal"
                android:id="@+id/motion_photo_edu_video_label_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reprocessing_video_label_1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/photo_prints_icon_v2"
                    android:scaleType="center"
                    android:contentDescription="@string/motion_photo_bullet_text_1"/>
                <TextView
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="@string/motion_photo_bullet_text_1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/motion_photo_edu_video_container_2"
                android:layout_width="364dp"
                android:layout_height="256dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="36dp">
                <com.google.android.apps.camera.ui.eduimageview.EduImageView
                    android:id="@+id/motion_photo_edu_video_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:importantForAccessibility="no"/>
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/motion_photo_edu_video_2_play_button"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/edu_animation_play_button"
                    android:contentDescription="@string/start_animation"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:layout_gravity="center_horizontal"
                android:id="@+id/motion_photo_edu_video_label_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reprocessing_video_label_3"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/motion_icon_v2"
                    android:scaleType="center"
                    android:contentDescription="@string/motion_photo_bullet_text_2"/>
                <TextView
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="@string/motion_photo_bullet_text_2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</merge>
