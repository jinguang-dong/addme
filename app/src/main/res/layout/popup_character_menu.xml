<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/character_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/close_button"
        android:background="@drawable/close_button_background"
        android:padding="6dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/quantum_ic_close_white_24"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/uranus_close_button_accessibility"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/sound_container"
        android:background="@drawable/voice_toggle_background"
        android:layout_width="32dp"
        android:layout_height="88dp"
        android:layout_marginTop="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_button">
        <ImageButton
            android:id="@+id/sound_on"
            android:background="@drawable/voice_selection_background"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:layout_width="32dp"
            android:layout_height="44dp"
            android:src="@drawable/gm_filled_volume_up_vd_theme_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:tint="?attr/colorOnPrimary"
            android:contentDescription="@string/uranus_voice_on_button_accessibility"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/sound_off"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:layout_width="32dp"
            android:layout_height="44dp"
            android:src="@drawable/gm_filled_volume_off_vd_theme_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:tint="?attr/colorOnSurface"
            android:contentDescription="@string/uranus_voice_off_button_accessibility"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sound_on"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expand_collapse_layout"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toLeftOf="@+id/close_button"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/character_list"
            android:background="@drawable/popup_character_menu_background"
            android:layout_width="wrap_content"
            android:layout_height="136dp"
            android:paddingHorizontal="@dimen/character_menu_list_horizontal_padding"
            android:paddingVertical="@dimen/character_menu_list_vertical_padding"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/expand_collapse_button"
            android:background="@drawable/expand_collapse_background"
            android:padding="2dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/character_expand_button_right_margin"
            android:src="@drawable/quantum_gm_ic_keyboard_arrow_right_white_24"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/uranus_collapse_button_accessibility"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/character_list"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/dispatch_touch_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
