<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/cinematic_pan_bottom_sheet_top_margin"
    android:paddingBottom="@dimen/cinematic_pan_bottom_sheet_bottom_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:gravity="center_horizontal"
        android:id="@+id/cinematic_pan_bottom_sheet_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/bottom_sheet_text_max_width"
        android:text="@string/cinematic_pan_bottom_sheet_description"
        android:paddingStart="@dimen/cinematic_pan_bottom_sheet_horizontal_margin"
        android:paddingEnd="@dimen/cinematic_pan_bottom_sheet_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:id="@+id/cinematic_pan_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinematic_pan_bottom_sheet_description">
        <com.google.android.apps.camera.ui.eduimageview.EduImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/cinematic_pan_edu_image"
            android:layout_width="394dp"
            android:layout_height="320dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_caption"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinematic_pan_image_container">
        <TextView
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:id="@+id/caption_before_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cinematic_pan_edu_unstabilized_caption"
            android:layout_weight="0.5"
            android:importantForAccessibility="no"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:id="@+id/caption_after_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cinematic_pan_edu_panning_caption"
            android:layout_weight="0.5"
            android:importantForAccessibility="no"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
