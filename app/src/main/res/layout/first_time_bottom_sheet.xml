<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/first_time_bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <include layout="@layout/beta"/>
        </FrameLayout>
        <TextView
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?attr/colorOnBackground"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/first_time_feature_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/first_time_feature_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="24dp"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/first_time_tabs_bar"/>
        <HorizontalScrollView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/first_time_video_scrollview"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <include
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                layout="@layout/first_time_video_slider"/>
        </HorizontalScrollView>
        <com.google.android.material.button.MaterialButton
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/first_time_try_it_out_button"
            android:layout_marginTop="16dp"
            android:text="@string/first_time_try_it_out_button_text"
            android:height="@dimen/first_time_try_it_out_button_height"
            android:width="@dimen/first_time_try_it_out_button_width"
            app:cornerRadius="12dp"
            style="@style/MaterialButtonFilledStyle"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="48dp"
            android:text="@string/first_time_preview_disclaimer"
            android:layout_marginHorizontal="24dp"/>
    </LinearLayout>
</merge>
