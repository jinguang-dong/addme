<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="18dp"
        android:maxWidth="362dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="24dp">
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/bottom_sheet_text_max_width"
            android:text="@string/macro_focus_description"/>
        <Space
            android:id="@+id/tap_on_icon_space"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"
            android:gravity="start"
            android:layout_gravity="start"
            android:id="@+id/tap_on_icon_line"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/bottom_sheet_text_max_width"
            android:text="@string/taxi_bottom_sheet_turn_on_off_desc"
            android:drawableLeft="@drawable/ic_macro_focus_on"
            android:drawablePadding="18dp"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"
            android:gravity="start"
            android:layout_gravity="start"
            android:id="@+id/focus_distance_text_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/bottom_sheet_text_max_width"
            android:drawableLeft="@drawable/ic_straighten"
            android:drawablePadding="18dp"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/macro_focus_bottom_sheet_animation"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</merge>
