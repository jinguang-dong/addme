<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/settingslib_expressive_space_extrasmall4"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:filterTouchesWhenObscured="false"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/value_container_1"
        android:background="@drawable/settingslib_value_preference_background"
        android:layout_width="@dimen/settingslib_expressive_space_none"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:layout_weight="1">
        <include layout="@layout/settingslib_expressive_value_preference_text_frame"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/value_container_2"
        android:background="@drawable/settingslib_value_preference_background"
        android:visibility="gone"
        android:layout_width="@dimen/settingslib_expressive_space_none"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/settingslib_expressive_space_small1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="false"
            android:paddingStart="@dimen/settingslib_expressive_space_small1"
            android:paddingEnd="@dimen/settingslib_expressive_space_small1"
            android:paddingVertical="@dimen/settingslib_expressive_space_small1">
            <TextView
                android:textAppearance="@style/TextAppearance.SettingsLib.DisplaySmall"
                android:textColor="@color/settingslib_text_color_primary"
                android:ellipsize="marquee"
                android:layout_gravity="start"
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAlignment="viewStart"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceListItemSecondary"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_gravity="start"
                android:id="@+id/summary2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_below="@+id/title2"
                android:textAlignment="viewStart"
                android:layout_alignStart="@+id/title2"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
