<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/ineligible_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/bottom_sheet_text_max_width"
            android:text="@string/mars_not_available_reason_account"
            android:layout_marginHorizontal="24dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/learn_more_button"
            android:text="@string/mars_learn_more"
            style="@style/MaterialButtonOutlinedStyle.AllRoundedCorner12dp"/>
    </LinearLayout>
</merge>
