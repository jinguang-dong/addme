<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/nsv_more_info_tab"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/nsv_edu_animation"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/how_edu_step_two_desc"
            android:drawableLeft="@drawable/gs_visibility_vd_theme_24"
            android:drawablePadding="24dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/how_edu_step_three_desc"
            android:drawableLeft="@drawable/gs_cloud_upload_vd_theme_24"
            android:drawablePadding="24dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/how_edu_step_four_desc"
            android:drawableLeft="@drawable/gs_notifications_vd_theme_24"
            android:drawablePadding="24dp"/>
    </LinearLayout>
</merge>
