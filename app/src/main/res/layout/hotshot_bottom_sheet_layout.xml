<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="28dp"
    android:paddingHorizontal="24dp">
    <TextView
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center_horizontal"
        android:id="@+id/hotshot_edu_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:contentDescription="@string/hotshot_edu_image_content_description"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/hotshot_edu_animation"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/hotshot_edu_additional_info"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/gs_tips_and_updates_vd_theme_24"
        android:layout_marginVertical="24dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/try_hotshot_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edu_button_height"
        android:text="@string/hotshot_bottom_sheet_try_hotshot_button"
        style="@style/MaterialButtonOutlinedStyle.TopRoundedCorner12dp.BottomRoundedCorner4dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/close_button_with_try_hotshot"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edu_button_height"
        android:text="@string/hotshot_bottom_sheet_close_button"
        style="@style/MaterialButtonOutlinedStyle.TopRoundedCorner4dp.BottomRoundedCorner12dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/education_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edu_button_height"
        style="@style/MaterialButtonFilledStyle"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_back_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edu_button_height"
        android:text="@string/hotshot_bottom_sheet_go_back_button"
        style="@style/MaterialButtonOutlinedStyle"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edu_button_height"
        android:layout_margin="0dp"
        android:text="@string/hotshot_bottom_sheet_close_button"
        style="@style/MaterialButtonOutlinedStyle.AllRoundedCorner12dp"/>
</LinearLayout>
