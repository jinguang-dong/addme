<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/sapphire_edu_padding_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/sapphire_edu_options_bar"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/sapphire_edu_about_tab"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/sapphire_edu_more_info_tab"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sapphire_btm_sheet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:maxHeight="90dp"
        android:minHeight="56dp"
        android:text="@string/turn_on_sapphire_btm_sheet"
        android:layout_marginHorizontal="24dp"
        style="@style/MaterialButtonFilledStyle.AllRoundedCorner12dp"/>
</LinearLayout>
