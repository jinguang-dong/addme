<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/stabilization_disable_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/bottom_sheet_text_max_width"
        android:text="@string/stabilization_disable_bottom_sheet_description"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/learn_more_about_stabilization"
        android:text="@string/stabilization_disable_learn_more"
        style="@style/MaterialButtonOutlinedStyle.AllRoundedCorner12dp"/>
</LinearLayout>
