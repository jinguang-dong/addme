<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bottom_sheet_description_container"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/bottom_sheet_text_max_width"
            android:layout_marginHorizontal="25dp"/>
        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            android:id="@+id/bottom_sheet_video_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">
            <com.google.android.apps.camera.ui.eduimageview.EduImageView
                android:id="@+id/bottom_sheet_video"
                android:layout_width="364dp"
                android:layout_height="232dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bottom_sheet_lower_description_container"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/bottom_sheet_text_max_width"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="24dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sheet_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/catcher_edu_to_settings_button"
            style="@style/MaterialButtonFilledStyle.AllRoundedCorner12dp"/>
    </LinearLayout>
</merge>
