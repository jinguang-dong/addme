<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="24dp">
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/description"
            android:padding="0px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/bottom_sheet_text_max_width"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/turn_battery_saver_off_button"
            android:layout_marginTop="32dp"
            android:text="@string/bottom_sheet_turn_off_battery_saver_button"
            style="@style/MaterialButtonFilledStyle.TopRoundedCorner12dp.BottomRoundedCorner4dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/close_button"
            android:layout_marginBottom="32dp"
            android:text="@string/bottom_sheet_close_button"
            style="@style/MaterialButtonOutlinedStyle.TopRoundedCorner4dp.BottomRoundedCorner12dp"/>
    </LinearLayout>
</merge>
